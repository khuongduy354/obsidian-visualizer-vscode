{
  "name": "obsidian-visualizer",
  "displayName": "Obsidian Visualizer",
  "description": "Obsidian graphs, backlinks,... visualization by opening vault in VSCode",
  "icon": "images/demo_dark.png",
  "version": "1.1.4",
  "publisher": "khuongduy354",
  "repository": {
    "url": "https://github.com/khuongduy354/obsidian-visualizer-vscode"
  },
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "obsidian-visualizer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "obsidian-visualizer.showLocalGraph",
        "title": "Obsidian Visualizer: Local Graph"
      },
      {
        "command": "obsidian-visualizer.showGlobalGraph",
        "title": "Obsidian Visualizer: Global Graph"
      },
      {
        "command": "obsidian-visualizer.forceWorkspaceParse",
        "title": "Obsidian Visualizer: Force workspace parse"
      }
    ],
    "configuration": {
      "title": "Obsidian Visualizer",
      "properties": {
        "obsidianVisualizer.include": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Glob patterns for files to include. If empty, all files are included (subject to exclusion). If set, only files matching these patterns are included."
        },
        "obsidianVisualizer.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/.*/**"
          ],
          "description": "Glob patterns for files to exclude. Takes precedence over include."
        },
        "obsidianVisualizer.linkPattern": {
          "type": "string",
          "enum": [
            "obsidian",
            "markdown",
            "both"
          ],
          "default": "obsidian",
          "description": "Link style to parse: 'obsidian' for [[...]], 'markdown' for [...](...), or 'both'."
        },
        "obsidianVisualizer.graph.nodeSize": {
          "type": "number",
          "default": 20,
          "minimum": 5,
          "maximum": 50,
          "description": "Size of nodes in the graph (radius in pixels)"
        },
        "obsidianVisualizer.graph.fontSize": {
          "type": "number",
          "default": 11,
          "minimum": 6,
          "maximum": 24,
          "description": "Font size for node labels"
        },
        "obsidianVisualizer.graph.repulsionForce": {
          "type": "number",
          "default": 800,
          "minimum": 100,
          "maximum": 3000,
          "description": "Repulsion force between nodes (higher = more spread out)"
        },
        "obsidianVisualizer.graph.linkDistance": {
          "type": "number",
          "default": 120,
          "minimum": 30,
          "maximum": 500,
          "description": "Ideal distance between connected nodes"
        },
        "obsidianVisualizer.graph.linkStrength": {
          "type": "number",
          "default": 0.005,
          "minimum": 0.001,
          "maximum": 0.1,
          "description": "Strength of link attraction force"
        },
        "obsidianVisualizer.graph.centerForce": {
          "type": "number",
          "default": 0.01,
          "minimum": 0,
          "maximum": 0.1,
          "description": "Force pulling nodes toward center (prevents drift)"
        },
        "obsidianVisualizer.graph.collisionRadius": {
          "type": "number",
          "default": 35,
          "minimum": 10,
          "maximum": 100,
          "description": "Collision detection radius to prevent node overlap"
        },
        "obsidianVisualizer.graph.velocityDecay": {
          "type": "number",
          "default": 0.4,
          "minimum": 0.1,
          "maximum": 0.9,
          "description": "Velocity decay (friction). Higher = nodes settle faster"
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --headless --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js src/web/test/suite/asset/sample-notes",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ../sample-obsidian-vault"
  },
  "devDependencies": {
    "@types/vscode": "^1.0.0",
    "@types/mocha": "^10.0.6",
    "@types/assert": "^1.5.10",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "mocha": "^10.4.0",
    "typescript": "^5.3.3",
    "@vscode/test-web": "^0.0.62",
    "ts-loader": "^9.5.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "@types/webpack-env": "^1.18.4",
    "assert": "^2.1.0",
    "process": "^0.11.10"
  }
}